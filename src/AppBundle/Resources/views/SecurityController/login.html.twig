{% extends "base.html.twig" %}

{% block title %}AppBundle:SecurityController:register{% endblock %}

{% block body %}
<h1>Connexion</h1>
    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <input type="text" placeholder="Email" 
            name="_username" id="" required class="form-control">
        </div>
        <div class="form-group">
            <input type="password" placeholder="Mot de passe" 
            name="_password" id="" required class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">
            Connexion
            </button>
        </div>
    </form>

{% endblock %}